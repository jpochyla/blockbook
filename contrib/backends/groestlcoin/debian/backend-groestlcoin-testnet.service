# It is not recommended to modify this file in-place, because it will
# be overwritten during package upgrades. If you want to add further
# options or overwrite existing ones then use
# $ systemctl edit groestlcoin-testnet.service
# See "man systemd.service" for details.

# Note that almost all daemon options could be specified in
# /opt/coins/nodes/groestlcoin_testnet/groestlcoin_testnet.conf

[Unit]
Description=groestlcoin daemon (testnet)
After=network.target

[Service]
ExecStart=/opt/coins/nodes/groestlcoin_testnet/groestlcoind -datadir=/opt/coins/data/groestlcoin_testnet/backend -conf=/opt/coins/nodes/groestlcoin_testnet/groestlcoin_testnet.conf -pid=/run/groestlcoind/groestlcoin_testnet.pid
# Creates /run/groestlcoind owned by groestlcoin
RuntimeDirectory=groestlcoind
User=groestlcoin
Type=forking
PIDFile=/run/groestlcoind/groestlcoin_testnet.pid
Restart=on-failure

# Resource limits
LimitNOFILE=500000

# Hardening measures
####################

# Provide a private /tmp and /var/tmp.
PrivateTmp=true

# Mount /usr, /boot/ and /etc read-only for the process.
ProtectSystem=full

# Disallow the process and all of its children to gain
# new privileges through execve().
NoNewPrivileges=true

# Use a new /dev namespace only populated with API pseudo devices
# such as /dev/null, /dev/zero and /dev/random.
PrivateDevices=true

# Deny the creation of writable and executable memory mappings.
MemoryDenyWriteExecute=true

[Install]
WantedBy=multi-user.target
