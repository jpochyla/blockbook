#!/bin/bash
set -e

case "$1" in

  configure)
    if ! id -u groestlcoin &> /dev/null
    then
        useradd --system -M -U groestlcoin -s /bin/false
    fi

    if [ "$(stat -c '%U' /opt/coins/data/groestlcoin/backend)" != "groestlcoin" ]
    then
        chown -R groestlcoin:groestlcoin /opt/coins/data/groestlcoin/backend
    fi
  ;;

esac

